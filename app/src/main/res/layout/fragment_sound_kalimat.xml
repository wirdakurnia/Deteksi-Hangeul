<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bground"
    tools:context=".Fragment.FragmentSoundKalimat">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"></androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="68dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_pilih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtArti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Kalimat"
            android:textColor="@color/white"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_pilih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtFormalNama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Formal"
            android:textColor="@color/white"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_pilih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/txtInformalNama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Informal"
            android:textColor="@color/white"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="268dp"
        android:layout_height="195dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/kotak_putih"
        android:elevation="-5dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/txtInformal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romanzi Informal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txtLafalInformal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lafal Informal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btnSoundInformal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sound" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="268dp"
        android:layout_height="195dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/kotak_putih"
        android:elevation="-5dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtFormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romanzi Formal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txtLafalFormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lafal Formal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btnSoundFormal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sound" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>